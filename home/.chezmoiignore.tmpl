.local/bin/macos_ws
{{- end }}

{{- if or (eq .chezmoi.hostname "JeanYves-PC") (eq .platform "cern") }}
.local/bin/jypc-mount
.local/bin/jypc-unmount
{{- end }}

{{- if not .is_workstation }}
.config/kitty
{{- end }}


