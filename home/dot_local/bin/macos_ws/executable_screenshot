#! /bin/sh
# Copyright (C) 2025 Jean Yves Beaucamp
# Trigger a screenshot from the terminal

output='/home/jeany/Pictures/screenshots/%Y-%m-%d-%T-screenshot.png'

case "$1" in
	"select") scrot "$output" --select --line mode=edge || exit ;;
	"window") scrot "$output" --focused --border || exit ;;
	*) scrot "$output" || exit ;;
esac

notify-send "Screenshot taken."
