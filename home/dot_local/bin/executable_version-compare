#!/bin/bash
# Copyright (C) 2025 Jean Yves Beaucamp
# Script used to compare software version numbers

# Returns 0 if a == b
# Returns 1 if a >  b
# Returns 2 if a <  b

if [[ $1 == $2 ]]; then
    echo 0
    exit 0
fi

IFS=.
ver1=($1)
ver2=($2)

# fill empty fields in ver1 with zeros
for ((i=${#ver1[@]}; i<${#ver2[@]}; i++)); do
    ver1[i]=0
done
for ((i=0; i<${#ver1[@]}; i++)); do
    if [[ -z ${ver2[i]} ]]; then
        # fill empty fields in ver2 with zeros
        ver2[i]=0
    fi
    if ((10#${ver1[i]} > 10#${ver2[i]})); then
    echo 1
        exit 0
    fi
    if ((10#${ver1[i]} < 10#${ver2[i]})); then
        echo 2
    exit 0
    fi
done

